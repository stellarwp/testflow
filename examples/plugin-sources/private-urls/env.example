# Private Plugin URLs Testing - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# =============================================================================
# STAGING ENVIRONMENT
# =============================================================================

# Staging plugin download URLs
STAGING_PLUGIN_URL_1=https://staging-cdn.example.com/plugins/premium-plugin-latest.zip
STAGING_PLUGIN_URL_2=https://staging-api.company.com/downloads/enterprise-addon.zip
STAGING_BETA_PLUGIN_URL=https://dev-server.company.com/beta/experimental-plugin.zip

# Staging authentication
STAGING_API_TOKEN=staging-api-token-here
STAGING_BETA_TOKEN=beta-access-token-here
STAGING_USERNAME=staging-username
STAGING_PASSWORD=staging-password

# =============================================================================
# PRODUCTION ENVIRONMENT  
# =============================================================================

# Production plugin download URLs (obfuscated examples)
PRIVATE_PLUGIN_URL_1=https://secure-cdn.example.com/plugins/premium-plugin-v1.2.3.zip
PRIVATE_PLUGIN_URL_2=https://api.company.com/downloads/enterprise-plugin.zip
COMPANY_ADDON_URL=https://downloads.company.com/addons/company-specific-addon.zip

# Licensed plugin URLs with fallbacks
LICENSED_PLUGIN_PRIMARY_URL=https://primary-server.example.com/licensed-plugin.zip
LICENSED_PLUGIN_BACKUP_URL=https://backup-server.example.com/licensed-plugin.zip

# =============================================================================
# AUTHENTICATION TOKENS
# =============================================================================

# API tokens for plugin downloads
PRIVATE_API_TOKEN=your-private-api-token-here
ENTERPRISE_API_KEY=enterprise-api-key-here
COMPANY_CDN_TOKEN=company-cdn-access-token

# License keys
PREMIUM_LICENSE_KEY=XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX
ENTERPRISE_LICENSE_KEY=enterprise-license-key-here
LICENSED_PLUGIN_KEY=licensed-plugin-key-here
LICENSED_PLUGIN_TOKEN=licensed-plugin-access-token

# Backup authentication
LICENSED_PLUGIN_BACKUP_TOKEN=backup-server-token

# =============================================================================
# CLIENT IDENTIFICATION
# =============================================================================

# Client IDs for API access
ENTERPRISE_CLIENT_ID=your-enterprise-client-id
COMPANY_ID=your-company-identifier

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Download settings
DOWNLOAD_TIMEOUT=30
DOWNLOAD_RETRIES=3
VERIFY_SSL=true

# Plugin-specific settings
PLUGIN_LICENSE_VALIDATION=true
AUTO_UPDATE_CHECK=false
ENABLE_PREMIUM_FEATURES=true

# Debug settings (for development)
TESTFLOW_DEBUG=false
TESTFLOW_LOG_DOWNLOADS=false
TESTFLOW_VERBOSE=false

# =============================================================================
# TESTFLOW CONFIGURATION
# =============================================================================

# Override default TestFlow settings
WP_BASE_URL=https://testflow.lndo.site
WP_USERNAME=admin
WP_PASSWORD=password

# Environment-specific overrides
TESTFLOW_PHP_VERSION=8.1
TESTFLOW_WORDPRESS_VERSION=latest
TESTFLOW_MYSQL_VERSION=8.0

# =============================================================================
# NOTES
# =============================================================================

# 1. Replace all example URLs with your actual private plugin URLs
# 2. Ensure all tokens and keys are valid and have appropriate permissions
# 3. Test connectivity to all URLs before running tests
# 4. Keep this file secure and never commit it to version control
# 5. Use GitHub Secrets for CI/CD environments
# 6. Rotate tokens and keys regularly for security 